<Window x:Class="View.GameWon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="GameWon" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Grid.Row="0" Text="You have finished the puzzle!" TextAlignment="Center" FontSize="13" Margin="0,50,0,0"/>
            <TextBlock Grid.Row="0" Name="SpentTime" TextAlignment="Center" FontSize="13" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="CloseGame" Click="CloseGame_Click" Content="Close" Margin="150,10,10,10" Width="50" Height="50" />
        </StackPanel>
    </Grid>
</Window>
